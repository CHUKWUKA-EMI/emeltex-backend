{
  "name": "emeltex-api",
  "version": "1.0.0",
  "main": "build/server.js",
  "author": "Chukwuka Emi",
  "engines": {
    "node": "14.x",
    "yarn": "1.22.10"
  },
  "keywords": [
    "emeltex",
    "ecommerce",
    "fintech",
    "payment",
    "nodejs",
    "express",
    "typescript",
    "javascript",
    "typeorm"
  ],
  "license": "MIT",
  "dependencies": {
    "@sendgrid/mail": "^7.4.5",
    "bcryptjs": "^2.4.3",
    "chalk": "^4.1.1",
    "class-validator": "^0.13.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mysql": "^2.14.1",
    "pg": "^8.6.0",
    "pg-hstore": "^2.3.4",
    "postgres": "^1.0.2",
    "reflect-metadata": "^0.1.13",
    "typeorm": "0.2.34",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.12",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/node": "^8.0.29",
    "nodemon": "^2.0.8",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.4"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production node build/src/server.js",
    "dev": "cross-env NODE_ENV=development nodemon --exec ts-node src/server.ts",
    "build": "rm -r build && tsc -p .",
    "typeorm:cli": "ts-node ./node_modules/typeorm/cli.js",
    "migration-run": "yarn run typeorm:cli migration:run",
    "migration-revert": "yarn run typeorm:cli migration:revert",
    "migration-show": "yarn run typeorm:cli migration:show"
  }
}
